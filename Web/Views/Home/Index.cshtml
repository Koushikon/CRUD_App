                    render: DataTable.render.select(),
                    targets: 0
                }
            ],
            paging: true,
            searching: false,
            lengthChange: false,
            ordering: false,
            pageLength: 5,
            language: {
                paginate: {
                    previous: 'Previous',
                    next: 'Next'
                }
            },
            layout: {
